@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Start";
}

<div>
    <h3>Запись на занятие</h3>
    <table>
        <tr class="header">
            <td><p>Вид танца</p></td>
            <td><p>Тренер</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (var d in ViewBag.Dances)
        {
            <tr>
                <td><p>@d.TypeOfDance</p></td>
                <td><p>@d.Treiner</p></td>
                <td><p>@d.Price</p></td>
                <td><p><button onclick="location.href='/Home/Sing_up/@d.Id'"> Записаться </button></p></td>

            </tr>
        }
    </table>
    <div>Справка о документах</div>
    <form action="/My/Downland">
        <button type="submit">Скачать</button>
    </form>
    <button onclick="location.href='/My/MySite'"> Мой сайт </button>
</div>